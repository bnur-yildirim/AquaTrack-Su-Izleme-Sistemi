# AquaTrack Environment Variables Template
# Copy this to .env and customize values

# SQLite Database (kullanıcılar için)
# Otomatik oluşturulur - backend/users.db

# Application Security
JWT_SECRET_KEY=AquaTrack_JWT_Secret_Key_2024_SuperSecure!#$
FLASK_SECRET_KEY=Flask_Secret_2024_AquaTrack!@#$%

# API Security
API_RATE_LIMIT=100
API_TIMEOUT=30

# Encryption Keys
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Email Configuration (Production)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@aquatrack.gov.tr
SMTP_PASSWORD=EmailSecure2024!

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=csv,parquet,json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aquatrack.log

# Backup Configuration
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

# Development/Production Flag
ENVIRONMENT=development
DEBUG=false
